<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/output.css" rel="stylesheet">
    <title>Document</title>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-10">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-blue-700"><%= checklist.title %></h1>
            <button class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 cursor-pointer" id="copy-checklist">Copy Checklist</button>
        </div>

        <form action="/list/<%= checklistId %>/createTodo" method="POST" class="mb-4 flex flex-col md:flex-row md:items-end">
            <input type="text" placeholder="Enter Todo Item" name="todoItem" class="px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300 mb-2 md:mb-0 md:mr-2 flex-grow">
            <input type="submit" value="Submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 cursor-pointer w-full md:w-auto mt-2 md:mt-0">
        </form>

        <ul class="list-none">
            <% todos.forEach( el => { %>
            <li class='todoItem mb-2 p-4 bg-white rounded shadow flex items-center justify-between' data-id='<%=el._id%>'>
                <div class="flex items-center">
                    <span class='<%= el.completed === true ? 'completed text-green-600' : 'not text-red-600'%>'>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="<%= el.completed === true ? 'text-green-600' : 'text-red-600'%> h-6 w-6 mr-2">
                            <%= el.completed === true ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>' : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>' %>
                        </svg>
                        <span><%= el.todo %></span>
                    </span>
                </div>
                <div class="actions hidden md:flex">
                    <span class='del text-gray-500 hover:text-gray-700 cursor-pointer'> Delete </span>
                    <span class="updateList text-gray-500 hover:text-gray-700 cursor-pointer ml-2">update</span>
                </div>
            </li>
            <% }) %>    
        </ul>

        <h2 class="text-2xl font-bold mt-6 mb-6 text-center text-gray-700"><%= user.userName %> has <%= left %> things left to do.</h2>

        <div class="flex justify-center mb-6">
            <button class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 cursor-pointer" id="list-reset">reset</button>
        </div>

        <!-- Copy the checklist form -->
        <form action="/list/<%= checklistId %>/copyChecklist" method="POST" class="hidden absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white shadow-lg rounded-lg p-6" id="copy-checklist-form">
            <input type="text" value="copy_of_<%= checklist.title %>" name="copyChecklist" class="px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300 mb-4 w-full">
            <select name="folderId" id="folders" class="px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300 mb-4 w-full">
                <option value="">Separate doc</option>
                <% folders.forEach((el) => { %>
                <option value="<%=el._id %>" class='Folders'>
                    <%=el.name %>
                </option>
                <% }) %>
            </select>
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 w-full">Submit</button>
        </form>

        <div class="text-center mt-6">
            <a href="/logout" class="text-blue-500 hover:text-blue-600">Logout</a>
        </div>

    </div>

    <script src="/js/main.js"></script>
    <script>
        document.querySelectorAll('.todoItem').forEach(item => {
            item.addEventListener('mouseover', () => {
                item.querySelector('.actions').classList.remove('hidden');
            });
            item.addEventListener('mouseout', () => {
                item.querySelector('.actions').classList.add('hidden');
            });
        });
    </script>
</body>
</html>
